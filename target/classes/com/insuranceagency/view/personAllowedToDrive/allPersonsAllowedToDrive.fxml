<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.insuranceagency.controllerPersonAllowedToDrive.AllPersonsAllowedToDriveController">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="85.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label text="Список лиц, допущенных к управлению" textAlignment="CENTER">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER" prefHeight="70.0">
                    <children>
                        <Label text="Введите водительское удостоверение">
                            <HBox.margin>
                                <Insets right="25.0" />
                            </HBox.margin>
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <TextField fx:id="tfSearch" HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" onAction="#onSearch" text="Поиск">
                            <HBox.margin>
                                <Insets left="5.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                    <padding>
                        <Insets top="5.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
        <TableView fx:id="tablePersonsAllowedToDrive" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="85.0">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="75.0" text="Id" visible="false" />
                <TableColumn fx:id="fullNameColumn" prefWidth="75.0" text="ФИО" />
                <TableColumn fx:id="drivingLicenceColumn" prefWidth="75.0" text="Водительское удостоверение" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <HBox alignment="CENTER" prefHeight="50.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <children>
                <Button focusTraversable="false" mnemonicParsing="false" onAction="#onChangePersonAllowedToDrive" text="Изменить" />
                <Button mnemonicParsing="false" onAction="#onClear" text="Исходное состояние">
                    <HBox.margin>
                        <Insets left="50.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
    </padding>
</AnchorPane>
